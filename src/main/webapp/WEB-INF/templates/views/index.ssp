<%@ val blogs: List[Map[String, String]] %>
<%@ val username: String %>


<title>BLOG!</title>

<h1>BLOG!</h1>

<% if (username == "none") %>
    <a href="/signup">Sign up</a>
    <a href="/login">Login</a>
<% else %>
    <a href="/welcome">Create blog</a>
    <a href="/logout">Logout</a>

<% for(blog <- blogs) {  %>
    <p>Author: ${blog("author")}</p>
    <p>Date: ${blog("dateAdded") }</p>
    <p>Post: ${blog("post") }</p>
<% } %>

